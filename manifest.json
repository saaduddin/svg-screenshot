{
    "manifest_version": 2,
  
    "name": "SVG Screenshot",
    "description": "Create scalable screenshots.",
    "version": "1.0",
  
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background" : {
        "scripts" : ["background.js"]
      },
    "icons": { 
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
     "activeTab", "<all_urls>"
     ]
  }